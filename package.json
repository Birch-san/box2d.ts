{
  "private": true,
  "workspaces": [
  ],
  "scripts": {
    "lint": "npm run lint:es && npm run lint:package && npm run lint:style",
    "lint:es": "eslint packages/*/{src,testbed,unit-test}/**/*.{ts,tsx} --ext .ts,.tsx --ignore-path .prettierignore",
    "lint:es:fix": "npm run lint:es -- --fix",
    "lint:fix": "npm run lint:es:fix && npm run lint:package:fix && npm run lint:style:fix",
    "lint:package": "npm run lint:package:fix -- --check",
    "lint:package:fix": "sort-package-json package.json packages/*/package.json",
    "lint:style": "npm run lint:style:base -- --check",
    "lint:style:base": "prettier packages/*/{src,testbed,unit-test}/**/*.{ts,tsx,js,json} packages/*/*.{ts,tsx,js,json}",
    "lint:style:fix": "npm run lint:style:base -- --write",
    "start": "yarn workspace @box2d/testbed start"
  },
  "devDependencies": {
    "@lusito/eslint-config": "^1.1.1",
    "@lusito/prettier-config": "^1.1.0",
    "@lusito/stylelint-config": "^1.1.0",
    "sort-package-json": "^1.44.0"
  }
}
